{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "target": "es6",
        "typeRoots": [ "./types", "./node_modules/@types", "../../node_modules/@types"]
    },
    "exclude": [
        "**/dist",
        "**/types",
    ]
}
